<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.reyesmagos.marcasquiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ActivityBonoQuizGame"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ActivityGameResume"
            android:label="Resultado">
            <intent-filter>
                <action android:name=".activities.ActivityGameResume" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GridActivity"
            android:label="@string/title_activity_grid"></activity>
        <activity
            android:name=".activities.SingUpActivity"
            android:label="@string/title_activity_sing_up">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login">

        </activity>
    </application>

</manifest>
