<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.reyesmagos.marcasquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.reyesmagos.marcasquiz.activities.ActivityBonoQuizGame"
            android:label="@string/app_name" />
        <activity
            android:name="co.reyesmagos.marcasquiz.activities.ActivityGameResume"
            android:label="Resultado" >
            <intent-filter>
                <action android:name=".activities.ActivityGameResume" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.reyesmagos.marcasquiz.activities.GridActivity"
            android:label="@string/title_activity_grid" />
        <activity
            android:name="co.reyesmagos.marcasquiz.activities.SignUpActivity"
            android:label="@string/title_activity_sing_up" >
        </activity>
        <activity
            android:name="co.reyesmagos.marcasquiz.activities.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>